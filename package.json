{
  "name": "iobroker.beckhoff",
  "version": "2.0.0-canary.0",
  "description": "ioBroker Beckhoff TwinCat ADS Adapter to communicate with Beckhoff Automation System",
  "author": {
    "name": "dkleber89",
    "email": "dkleber89@gmail.com"
  },
  "homepage": "https://github.com/dkleber89/ioBroker.beckhoff",
  "license": "MIT",
  "keywords": [
    "beckhoff",
    "ads",
    "plc",
    "twincat",
    "smart home",
    "home automation",
    "iobroker"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dkleber89/ioBroker.beckhoff.git"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^2.6.6",
    "node-ads": "^1.5.1",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.5.9",
    "@iobroker/adapter-dev": "^1.1.0",
    "@iobroker/adapter-react": "2.0.22",
    "@iobroker/testing": "^4.1.0",
    "@material-ui/core": "^4.12.4",
    "@tsconfig/node16": "^1.0.3",
    "@types/chai": "^4.3.3",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.18",
    "@types/proxyquire": "^1.3.28",
    "@types/react": "^17.0.50",
    "@types/react-dom": "^17.0.17",
    "@types/sinon": "^10.0.13",
    "@types/sinon-chai": "^3.2.8",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.37.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "proxyquire": "^2.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "sinon": "^14.0.0",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "typescript": "~4.8.3"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "admin/build/",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf build admin/build",
    "build": "build-adapter all",
    "watch": "build-adapter all --watch",
    "prebuild:ts": "rimraf build",
    "build:ts": "build-adapter ts",
    "watch:ts": "build-adapter ts --watch",
    "prebuild:react": "rimraf admin/build",
    "build:react": "build-adapter react",
    "watch:react": "build-adapter react --watch",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit && tsc --noEmit -p admin/tsconfig.json",
    "lint": "eslint --ext .ts,.tsx src/ admin/src/",
    "translate": "translate-adapter",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/dkleber89/ioBroker.beckhoff/issues"
  },
  "readmeFilename": "README.md"
}
